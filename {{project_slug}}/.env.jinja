# Environment variables for {{ project_name }}
# Copy this file to .env.local and customize as needed

# Development settings
DEBUG=true
LOG_LEVEL=INFO

# Package metadata
PACKAGE_NAME={{ package_name }}
PACKAGE_VERSION=0.1.0

# Development tools
PYTHONPATH=src
PYTEST_ADDOPTS=--strict-markers --disable-warnings

# Optional: API keys and secrets (never commit real values)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# Optional: Database URLs for testing
# TEST_DATABASE_URL=sqlite:///test.db
# DATABASE_URL=sqlite:///{{ project_slug }}.db

# Optional: External service URLs
# EXTERNAL_API_URL=https://api.example.com
# WEBHOOK_URL=https://hooks.example.com

# CI/CD settings (for GitHub Actions)
# PYPI_TOKEN=your_pypi_token
# TEST_PYPI_TOKEN=your_test_pypi_token