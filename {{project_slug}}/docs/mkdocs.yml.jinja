{% if include_docs %}site_name: {{ project_name }}
site_description: {{ project_description }}
site_author: {{ author_name }}
site_url: https://{{ github_username }}.github.io/{{ project_slug }}

repo_name: {{ github_username }}/{{ project_slug }}
repo_url: https://github.com/{{ github_username }}/{{ project_slug }}
edit_uri: edit/main/docs/

nav:
  - Home: index.md
  - API Reference: api.md
  - Examples: examples.md
  - Contributing: contributing.md
  - Changelog: ../CHANGELOG.md

theme:
  name: material
  palette:
    # Palette toggle for light mode
    - scheme: default
      primary: blue
      accent: blue
      toggle:
        icon: material/brightness-7
        name: Switch to dark mode
    # Palette toggle for dark mode
    - scheme: slate
      primary: blue
      accent: blue
      toggle:
        icon: material/brightness-4
        name: Switch to light mode
  features:
    - navigation.tabs
    - navigation.sections
    - navigation.expand
    - navigation.top
    - search.highlight
    - search.share
    - content.code.copy
    - content.code.annotate

plugins:
  - search
  - mkdocstrings:
      handlers:
        python:
          options:
            docstring_style: google
            show_source: false
            show_root_heading: true
            show_root_full_path: false
            show_signature_annotations: true
            separate_signature: true
            merge_init_into_class: true
  - gen-files:
      scripts:
        - gen_ref_pages.py
  - literate-nav:
      nav_file: SUMMARY.md

markdown_extensions:
  - admonition
  - pymdownx.details
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.inlinehilite
  - pymdownx.snippets
  - pymdownx.tabbed:
      alternate_style: true
  - pymdownx.tasklist:
      custom_checkbox: true
  - attr_list
  - md_in_html
  - toc:
      permalink: true

extra:
  social:
    - icon: fontawesome/brands/github
      link: https://github.com/{{ github_username }}
    - icon: fontawesome/brands/python
      link: https://pypi.org/project/{{ project_slug }}

extra_css:
  - css/custom.css

extra_javascript:
  - js/custom.js

copyright: Copyright &copy; {% now 'utc', '%Y' %} {{ author_name }}
{% else %}# MkDocs Configuration

site_name: {{ project_name }}
site_description: {{ project_description }}
site_author: {{ author_name }}

# Documentation is not enabled for this project
# To enable documentation, set include_docs=true in your copier configuration

nav:
  - Home: index.md

theme:
  name: material

plugins:
  - search

markdown_extensions:
  - admonition
  - pymdownx.details
  - pymdownx.superfences

# Note: This is a minimal configuration
# Enable full documentation features by setting include_docs=true
{% endif %}